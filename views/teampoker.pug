extends layout

block styles
  - if (env === 'development')
    link(rel='stylesheet', href='stylesheets/style.css', type='text/css')
  - else
    link(rel='stylesheet', href='stylesheets/style.min.css', type='text/css')
block content
  h2 Room link
  #room-info
    input(type='text', readonly='readonly' id='txt-room-link').form-control
    a(id="btn-copy", data-clipboard-target="txt-room-link").btn.btn-primary Copy
  h2 Stories list
  #story-list
    table#story-table.table.table-striped.table-bordered
      thead
        tr
          th Story description
          th Point
          th Currently voting
      tbody
    #add-story-wrapper
      input#btn-add-story.btn.btn-primary(type='button', value='Add New Story')
  h2 Vote
  #pokerbar-wrapper
    #vote-status
      | Thank you for voting:), you voted: 
      span#spVoteVal.label.label-primary
      | .
  #votebar
    input#btnViewResult.btn.btn-primary(type='button', value='View Vote Result')
  h2 Current participants
  #participants
  a(href="https://github.com/WayneYe/ScrumPoker", target="_blank")
    img(style="position: absolute; top: 0; right: 0; border: 0;",src="https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png",alt="Fork me on GitHub")
block scripts
  script(src='/socket.io/socket.io.js')
  - if(env === 'development')
    script(src='javascripts/vendor/ZeroClipboard.min.js')
    script(src='javascripts/team-poker-base.js')
    script(src='javascripts/team-poker-util.js')
    script(src='javascripts/team-poker-socket-client.js')
    script(src='javascripts/ui/widgets/widget-base.js')
    script(src='javascripts/ui/widgets/popup.js')
    script(src='javascripts/ui/widgets/share-link.js')
    script(src='javascripts/ui/widgets/login-form.js')
    script(src='javascripts/ui/widgets/poker-queue.js')
    script(src='javascripts/ui/widgets/participant-list.js')
    script(src='javascripts/ui/ui-manager.js')
    script(src='javascripts/ui/widgets/vote-result-dialog.js')
    script(src='javascripts/team-poker.js')
  - else if(env === 'production')
    script(src='javascripts/teampoker.min.js')
