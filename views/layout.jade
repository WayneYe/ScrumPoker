doctype html 
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(keyword='TeamPoker HTML5 WebSocket nodejs')
    meta(description='A realtime agile planning web app powered by HTML5 WebSocket and nodejs/Socket.IO.')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='X-UA-Compatible', content='IE-edge')
    meta(name='author', content='Wayne Ye')
    block meta
    title Scrum Team Poker
    link(rel='shortcut icon', href='')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css', type='text/css')
    //-link(rel='stylesheet', href='stylesheets/bootstrap-responsive.min.css', type='text/css')
    style(type='text/css', media='screen, projection').
      //-body {
        //-padding-top: 60px;
      //-}
      footer
      {
        margin:0 auto;
        margin-top: 5em;
        text-align:center;
        font-size: 12px;
        color: #777;
      }
    block styles

  body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      //-.navbar-inner
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='./index.html') Scrum Team Poker
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') Room
            li
              a(href='#') About
            li
              a(href='#') Feedback
            li
              a#btn-logout(href='#') Logout
    .container
      block content
      footer
        hr
        | Scrum Team Poker Developed by
        | Wayne's Geek Life -
        a(href='http://wayneye.com', target='_blank') http://WayneYe.com
        br
        | 2012 - 2014
  - if(env === 'development')
    script(src='javascripts/vendor/jquery-2.0.3.js')
    script(src='javascripts/vendor/underscore.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js')
    script(src='javascripts/vendor/jquery.cookie.js')
  - else if(env === 'production')
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.0/jquery.cookie.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.3/underscore-min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/socket.io/0.9.10/socket.io.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js')
  block scripts
